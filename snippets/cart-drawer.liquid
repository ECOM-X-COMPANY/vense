						{%- if settings.cart_drawer_cart_button -%}
						<a href="{{ routes.cart_url }}" class="text-button" title="{{ 'general.cart_drawer.view_cart' | t | escape }}">{{ 'general.cart_drawer.view_cart' | t }}</a>
						{%- endif -%}
					</div>
				</div>
			</div>
		{%- endif -%}
	</div>
</div>
{%- endif -%}
