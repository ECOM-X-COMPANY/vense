{{- 'gallery.css' | asset_url | stylesheet_tag -}}
{%- liquid
	assign columns_desktop = section.settings.columns_desktop
	assign section_width = section.settings.section_width
	assign column_spacing = section.settings.column_spacing
	assign content_position = section.settings.content_position
	assign text_alignment = section.settings.text_alignment
	assign mobile_swipe = section.settings.mobile_swipe
	assign image_ratio = section.settings.image_ratio
	assign heading_size = section.settings.heading_size
	assign overlay_color = section.settings.overlay_color
	assign overlay_opacity = section.settings.overlay_opacity
	assign disable_top_spacing = section.settings.disable_top_spacing
	assign disable_bottom_spacing = section.settings.disable_bottom_spacing
-%}
<div class="row {{ section_width }}">
	<div class="small-12 columns">
		<div class="gallery gallery-spacing--{{ column_spacing }} text-{{ text_alignment }}{% if mobile_swipe %} swipe-on-mobile{% endif %} section-spacing{% if disable_top_spacing %} section-spacing--disable-top{% endif %}{% if disable_bottom_spacing %} section-spacing--disable-bottom{% endif %}" style="--gallery-columns: {{ columns_desktop }};--overlay-color-rgb: {{ overlay_color.rgb | replace: ' ' , ',' }}; --overlay-opacity: {{ overlay_opacity | divided_by: 100.0 }}">
			<div class="gallery__inner">
				{%- for block in section.blocks -%}
					<div class="gallery__item" {{ block.shopify_attributes }}>
						{%- liquid
							assign ratio = 1
							if image_ratio == 'adapt' and block.settings.image
								assign ratio = block.settings.image.aspect_ratio
							endif
						-%}
						<figure class="aspect-ratio aspect-ratio--{{ image_ratio }}" style="--ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;">
							{%- if block.settings.image -%}
								{%- liquid
									assign sizes = '375x0,750x0'

									unless section_width == 'grid'
										assign sizes = sizes | append: ',1125x0'
									endunless
								-%}
								{%- render 'responsive-image', image: block.settings.image, sizes: sizes -%}
							{%- else -%}
								{{ 'image' | placeholder_svg_tag: 'placeholder_svg_tag' }}
							{%- endif -%}
							<div class="gallery__item-content content-{{ content_position }}">
								<div>
									{% if block.settings.subheading != blank %}
										<p class="subheading">{{ block.settings.subheading }}</p>
									{% endif %}
									{% if block.settings.title != blank %}
										<h4 class="{{ heading_size }}">{{ block.settings.title }}</h4>
									{% endif %}
									{% if block.settings.text != blank %}
										<p>{{ block.settings.text }}</p>
									{% endif %}
									{% if block.settings.link_label != blank %}
										{% liquid
											assign button_class = 'button white'
											if block.settings.use_text_button
												assign button_class = 'text-button white'
											endif
										-%}
										<a class="{{ button_class }}"{% if block.settings.link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.link }}"{% endif %} aria-label="{{ block.settings.link_label }}"><span>{{ block.settings.link_label }}</span></a>
									{% endif %}
									{% if block.settings.block_link != blank %}
										<a href="{{ block.settings.block_link }}" class="gallery__item-content-link" target="_blank"></a>
									{% endif %}
								</div>
							</div>
						</figure>
					</div>
				{%- endfor -%}
			</div>
		</div>
	</div>
</div>

{% schema %}
  {
    "name": "Gallery",
		"class": "section-gallery",
    "settings": [
			{
				"type": "range",
				"id": "columns_desktop",
				"min": 2,
				"max": 4,
				"step": 1,
				"default": 3,
				"label": "Number of columns on desktop"
			},
			{
				"type": "select",
				"id": "section_width",
				"options": [
					{
						"value": "grid",
						"label": "Grid"
					},
					{
						"value": "full-width-row",
						"label": "Full width"
					},
					{
						"value": "full-width-row-full",
						"label": "Full width, no spacing"
					}
				],
				"default": "grid",
				"label": "Section width"
			},
			{
	      "type": "checkbox",
	      "id": "mobile_swipe",
	      "default": false,
	      "label": "Enable swipe on mobile"
	    },
			{
	      "type": "select",
	      "id": "image_ratio",
	      "options": [
	        {
	          "value": "adapt",
	          "label": "Adapt to image"
	        },
	        {
	          "value": "portrait",
	          "label": "Portrait"
	        },
					{
	          "value": "landscape",
	          "label": "Landscape"
	        },
	        {
	          "value": "square",
	          "label": "Square"
	        }
	      ],
	      "default": "adapt",
	      "label": "Image ratio"
	    },
			{
				 "type": "select",
				 "id": "content_position",
				 "label": "Content position",
				 "options": [
					 { "value": "top-left", "label": "Top left" },
					 { "value": "top-center", "label": "Top center" },
					 { "value": "top-right", "label": "Top right" },
					 { "value": "middle-left", "label": "Middle left" },
					 { "value": "middle-center", "label": "Middle center" },
					 { "value": "middle-right", "label": "Middle right" },
					 { "value": "bottom-left", "label": "Bottom left" },
					 { "value": "bottom-center", "label": "Bottom center" },
					 { "value": "bottom-right", "label": "Bottom right" }
				 ],
				 "default": "bottom-left"
			},
			{
				"type": "select",
				"id": "text_alignment",
				"options": [
					{
						"value": "left",
						"label": "Left"
					},
					{
						"value": "center",
						"label": "Center"
					},
					{
						"value": "right",
						"label": "Right"
					}
				],
				"default": "left",
				"label": "Content alignment"
			},
			{
	      "type": "select",
	      "id": "column_spacing",
	      "options": [
					{
						"value": "none",
						"label": "None"
					},
	        {
	          "value": "small",
	          "label": "Small"
	        },
					{
	          "value": "medium",
	          "label": "Medium"
	        },
	        {
	          "value": "large",
	          "label": "Large"
	        }
	      ],
	      "default": "small",
	      "label": "Column spacing"
	    },
			{
				"type": "select",
				"id": "heading_size",
				"label": "Heading size",
				"options": [
					{
						"value": "h1",
						"label": "Large"
					},
					{
						"value": "h2",
						"label": "Medium"
					},
					{
						"value": "h3",
						"label": "Small"
					}
				],
				"default": "h2"
			},
			{
	      "type": "header",
	      "content": "Colors"
	    },
			{
				"type": "color",
				"id": "overlay_color",
				"label": "Overlay",
				"default": "#000000"
			},
			{
				"type": "range",
				"id": "overlay_opacity",
				"min": 0,
				"max": 100,
				"step": 1,
				"unit": "%",
				"label": "Overlay opacity",
				"default": 70
			},
			{
	      "type": "header",
	      "content": "Spacing"
	    },
			{
				"type": "checkbox",
				"id": "disable_top_spacing",
				"default": false,
				"label": "Remove top spacing"
			},
			{
				"type": "checkbox",
				"id": "disable_bottom_spacing",
				"default": false,
				"label": "Remove bottom spacing"
			}
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
						"info": "720 x 550 .jpg recommended."
          },
					{
						"type": "text",
						"id": "subheading",
						"label": "Subheading",
						"default": "Add a tagline"
					},
					{
						"type": "text",
						"id": "title",
						"default": "Column",
						"label": "Heading"
					},
					{
						"type": "textarea",
						"id": "text",
						"default": "Pair text with an image to focus on your chosen image",
						"label": "Description"
					},
					{
            "id": "link_label",
            "type": "text",
            "label": "Button label",
            "default": "Explore",
						"info": "Leave the label blank to hide the button."
          },
          {
            "id": "link",
            "type": "url",
            "label": "Button link"
          },
					{
						 "type": "checkbox",
						 "id": "use_text_button",
						 "label": "Use text button",
						 "default": false
					},
					{
            "id": "block_link",
            "type": "url",
            "label": "Image link",
						"info": "This will allow you to set a link to whole image."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Gallery",
				"blocks": [
					{
						"type": "image"
					},
					{
						"type": "image"
					},
					{
						"type": "image"
					}
				]
      }
    ]
  }
{% endschema %}
